<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detailedGoalText"
                    android:text="해야 할 일"
                    android:textSize="20sp"
                    android:fontFamily="@font/mango"
                    android:textColor="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/delete_item_button"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_minus"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/detailedGoalEditText"
                android:textSize="20sp"
                android:hint="목표를 입력해주세요"
                android:gravity="center"
                android:fontFamily="@font/mango"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/detailedGoalRepeat"
                android:text="반복"
                android:fontFamily="@font/mango"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/date_spinner"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/detailedGoalDate"
                android:text="기간"
                android:fontFamily="@font/mango"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/detailedGoalDateEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/edit_detailed_date_btn"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_calender_icon"/>

                <TextView
                    android:id="@+id/edit_detailed_date"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="@font/mango"
                    android:background="@drawable/border"
                    android:layout_marginRight="35sp"
                    android:layout_width="match_parent"
                    android:layout_height="30sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
